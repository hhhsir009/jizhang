{
  "bsonType": "object",
  "required": ["userId", "categoryKey", "amount", "type", "date", "createdAt"],
  "permission": {
    "read": true,
    "create": true,
    "update": true,
    "delete": true
  },
  "properties": {
    "_id": {
      "description": "系统自动生成 ID"
    },
    "userId": {
      "bsonType": "string",
      "description": "用户唯一标识"
    },
    "categoryKey": {
      "bsonType": "string",
      "description": "关联的分类唯一标识（对应分类表的 key）"
    },
    "amount": {
      "bsonType": "double",
      "description": "金额，正数"
    },
    "type": {
      "bsonType": "string",
      "description": "收支类型：income 或 expense",
      "enum": ["income", "expense"]
    },
    "date": {
      "bsonType": "date",
      "description": "交易发生的日期时间（可精确到日或秒）"
    },
    "remark": {
      "bsonType": "string",
      "description": "备注信息，可选"
    },
    "createdAt": {
      "bsonType": "date",
      "description": "记录创建时间"
    }
  }
}