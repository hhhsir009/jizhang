// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
  "bsonType": "object",
  "required": ["userId", "type", "amount", "categoryKey", "occurDate", "occurTime", "createdAt"],
  "permission": {
    "read": true,
    "create": true,
    "update": true,
    "delete": true
  },
  "properties": {
    "_id": {
      "description": "系统自动生成 ID"
    },
    "userId": {
      "bsonType": "string",
      "description": "用户唯一标识"
    },
    "type": {
      "bsonType": "string",
      "description": "收支类型：income 或 expense",
      "enum": ["income", "expense"]
    },
    "amount": {
      "bsonType": "double",
      "description": "金额"
    },
    "categoryKey": {
      "bsonType": "string",
      "description": "关联分类表 categories.key"
    },
    "categoryName": {
      "bsonType": "string",
      "description": "分类名称（可选冗余，便于快速显示）"
    },
    "note": {
      "bsonType": "string",
      "description": "备注，可为空"
    },
    "occurDate": {
      "bsonType": "string",
      "description": "发生日期，YYYY-MM-DD"
    },
    "occurTime": {
      "bsonType": "string",
      "description": "发生时间，HH:mm"
    },
    "createdAt": {
      "bsonType": "date",
      "description": "添加时间"
    }
  }
}
